<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/net_setting_lan_manual_view" style="@style/LanLayout"
    android:visibility="invisible">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <TextView
            android:id="@+id/net_setting_lan_manual_title"
            android:layout_width="190px"
            android:layout_height="50px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="24px"
            android:textColor="#80FFFFFF"
            android:gravity="center" />

        <ImageView
            android:id="@+id/net_setting_lan_manual_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/net_setting_lan_manual_title"
            android:layout_centerVertical="true"
            android:src="@drawable/net_setting_lan_ip_bg" />

        <ImageView
            android:id="@+id/net_setting_lan_focus_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/net_setting_lan_manual_title"
            android:layout_centerVertical="true"
            android:src="@drawable/net_setting_lan_ip_focus" />

        <lib.widget.wheel.WheelView
            android:id="@+id/digit_1"
            style="@style/DigitWheelView"
            android:layout_toRightOf="@id/net_setting_lan_manual_title"
            android:layout_marginLeft="8px"
            android:nextFocusLeft="@+id/net_setting_lan_button_next" />

        <lib.widget.wheel.WheelView
            android:id="@+id/digit_2"
            style="@style/DigitWheelView"
            android:layout_toRightOf="@id/digit_1" />

        <lib.widget.wheel.WheelView
            android:id="@+id/digit_3"
            style="@style/DigitWheelView"
            android:layout_toRightOf="@id/digit_2" />

        <lib.widget.wheel.WheelView
            android:id="@+id/digit_4"
            style="@style/DigitWheelView"
            android:layout_marginLeft="15px"
            android:layout_toRightOf="@id/digit_3" />

        <lib.widget.wheel.WheelView
            android:id="@+id/digit_5"
            style="@style/DigitWheelView"
            android:layout_toRightOf="@id/digit_4" />

        <lib.widget.wheel.WheelView
            android:id="@+id/digit_6"
            style="@style/DigitWheelView"
            android:layout_toRightOf="@id/digit_5" />

        <lib.widget.wheel.WheelView
            android:id="@+id/digit_7"
            style="@style/DigitWheelView"
            android:layout_marginLeft="14px"
            android:layout_toRightOf="@id/digit_6" />

        <lib.widget.wheel.WheelView
            android:id="@+id/digit_8"
            style="@style/DigitWheelView"
            android:layout_toRightOf="@id/digit_7" />

        <lib.widget.wheel.WheelView
            android:id="@+id/digit_9"
            style="@style/DigitWheelView"
            android:layout_toRightOf="@id/digit_8" />

        <lib.widget.wheel.WheelView
            android:id="@+id/digit_10"
            style="@style/DigitWheelView"
            android:layout_marginLeft="14px"
            android:layout_toRightOf="@id/digit_9" />

        <lib.widget.wheel.WheelView
            android:id="@+id/digit_11"
            style="@style/DigitWheelView"
            android:layout_toRightOf="@id/digit_10" />

        <lib.widget.wheel.WheelView
            android:id="@+id/digit_12"
            style="@style/DigitWheelView"
            android:layout_toRightOf="@id/digit_11" />

        <Button
            android:id="@+id/net_setting_lan_button_next"
            style="@style/Button2"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10px"
            android:layout_marginTop="17px"
            android:layout_toRightOf="@id/net_setting_lan_manual_bg"
            android:nextFocusLeft="@id/digit_12"
            android:nextFocusRight="@id/digit_1" />

    </RelativeLayout>

</RelativeLayout>
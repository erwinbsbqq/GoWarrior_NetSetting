<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/net_setting_bg">

    <TextView
        android:id="@+id/net_setting_lan_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:text="@string/title_net_setting_lan"
        android:textColor="@android:color/white"
        android:textSize="38px" />

    <TextView
        android:id="@+id/net_setting_lan_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/white"
        android:textSize="24px"
        android:visibility="visible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140px"
        android:src="@drawable/net_setting_small_bg" />

    <include layout="@layout/net_setting_lan_view" />
    <include layout="@layout/net_setting_lan_manual_view" />
    <include layout="@layout/net_setting_lan_dial_view" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Text color when it is not selected -->
    <item android:state_selected="false" android:color="#B2FFFFFF"/>

    <!-- Text color when it is selected -->
    <item android:state_selected="true" android:color="@android:color/white"/>

    <!-- Text color when it is selected && is pressed -->
    <item android:state_focused="true" android:state_pressed="true" android:color="@android:color/white"/>

</selector>